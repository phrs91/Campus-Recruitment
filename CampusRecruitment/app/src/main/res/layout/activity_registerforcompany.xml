<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <TextView
        android:id="@+id/cmp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Company:"
        android:textColor="#FFFF"
        android:textStyle="bold"
        android:textSize="25dp"/>
    <TextView
        android:id="@+id/cmp_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TEXT"
        android:textColor="#757575"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/crs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Courses Allowed:"
        android:textStyle="bold"
        android:textColor="#FFFF"

        android:textSize="25dp"/>
    <TextView
        android:id="@+id/crs_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TEXT"
        android:textSize="15dp"
        android:textColor="#757575"/>
    <TextView
        android:id="@+id/branch40"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Branches Allowed:"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#FFFF"/>
    <TextView
        android:id="@+id/branch40_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TEXT"
        android:textColor="#757575"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/ctc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="CTC:"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#FFFF"/>
    <TextView
        android:id="@+id/ctc_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TEXT"
        android:textSize="15dp"
        android:textColor="#757575"/>

    <TextView
        android:id="@+id/elg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Eligibility:"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#FFFF"/>
    <TextView
        android:id="@+id/elg_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TEXT"
        android:textSize="15dp"
        android:textColor="#757575"/>

    <TextView
        android:id="@+id/des"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textStyle="bold"
        android:textColor="#FFFF"
        android:textSize="25dp"/>




    <TextView
        android:id="@+id/des_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TEXT"
        android:textSize="15dp"
        android:textColor="#757575"/>
           </LinearLayout>

   </ScrollView>

    <Button
        android:id="@+id/registerforcombutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:text="Register"
        android:textSize="20dp"
        android:textColor="#FFFF"
        android:background="@drawable/btn"


        />


</LinearLayout>